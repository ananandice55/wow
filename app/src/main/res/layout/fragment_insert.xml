<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InsertFragment">

        <!-- TODO: Update blank fragment layout -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="22dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="167dp"
                android:layout_height="109dp"
                app:layout_constraintBottom_toTopOf="@+id/btnChoose"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/hintName"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/ageEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnChoose" />

            <EditText
                android:id="@+id/ageEditText"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/hintAge"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/proportionEdittext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameEditText" />

            <EditText
                android:id="@+id/placeEditText"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/hintPlace"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/priceEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/proportionEdittext" />

            <EditText
                android:id="@+id/priceEditText"
                android:layout_width="318dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="@string/hintPrice"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/contactEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeEditText" />

            <EditText
                android:id="@+id/contactEditText"
                android:layout_width="315dp"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="@string/hintContact"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/btnAdd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/priceEditText" />

            <EditText
                android:id="@+id/proportionEdittext"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/hintProportion"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/placeEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ageEditText" />

            <Button
                android:id="@+id/btnChoose"
                android:layout_width="136dp"
                android:layout_height="50dp"
                android:text="เพิ่มรูปภาพ"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/nameEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnAdd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contactEditText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>
